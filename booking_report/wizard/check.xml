<odoo>
   <!--Form view for reservation check in/out wizard -->
   <record id="sale_reservation_wizard_form_view" model="ir.ui.view">
       <field name="name">sale.order.reservation.wizard.form</field>
       <field name="model">sale.order.reservation.wizard2</field>
       <field name="arch" type="xml">
           <form string="Reservation List" version='7.0'>
               <group colspan="2">
                  <field name="filter_event" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                </group>
               <group col="4">
                   <field name="date_start" attrs="{'invisible':[('filter_event','!=',False)]}"/>
                   <field name="date_end" attrs="{'invisible':[('filter_event','!=',False)]}"/>
               </group>
               <footer>
                   <button name='open_url' string="Check List"
                       type="object" icon="fa-level-down" class="btn btn-primary"/> or

                   <button name='report_checkevent_detail' attrs="{'invisible':[('filter_event','=',False)]}" string="Check List PDF"
                       type="object" icon="fa-level-up" class="btn btn-primary"/> or

                   <button name='report_coocking_detail' type='object'
                       string='Cooking List' icon="fa-apple" class="btn btn-primary"/> or
                   <button special="cancel" string="Cancel" icon="fa-close" class="btn btn-primary"/>
               </footer>
           </form>
       </field>
   </record>

   <act_window id="website_booking.action_sale_reservation_wizard"
                             name="Reservation report Html/PDF"
                             res_model="sale.order.reservation.wizard2"
                             view_type="form"
                             view_mode="form"
                             view_id="sale_reservation_wizard_form_view"
                             target="new"/>

 </odoo>
