<openerp>
    <data>


        <template id="authentication_by_authenticator.login" inherit_id="web.login" name="authenticator Login buttons">

            <xpath expr="//form[hasclass('oe_login_form')]" position="attributes">
                <attribute name='t-attf-action'>/web/authenticator{{ '?debug' if debug else '' }}</attribute>
                
            </xpath>

        </template>




        <template id="authenticator" name="Authenticator">
            <t t-call="web.login_layout">
                <form class="oe_login_form" role="form" t-attf-action="/web/authenticator{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">


                  <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                        <label for="db" class="control-label">Database</label>
                        <div class="input-group">
                            <input type="text" name="db" t-att-value="request.db" id="db" class="form-control" required="required" readonly="readonly"/>
                            <span class="input-group-btn">
                              <a href="/web/database/selector" class="btn btn-default">Select <i class="fa fa-database"></i></a>
                            </span>
                        </div>
                    </div>


                    <div class="form-group field-login">
                        <input type="hidden" name="login" t-att-value="login" id="login" class="form-control"/>
                    </div>

                    <div class="form-group field-password">
                        <input type="hidden" name="password" t-att-value="password" id="password" class="form-control"/>
                    </div>

                    <div class="form-group field-pincode">
                        <label for="Pincode" class="control-label">Authenticator</label>
                        <input type="text" name="pincode" id="pincode" class="form-control" required="required" t-att-autofocus='autofocus'/>
                    </div>


                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>

                    <p class="alert alert-success" t-if="message">
                        <t t-esc="message"/>
                    </p>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>

                    <input type="hidden" name="numpin" t-att-value="numpin"/>

                    <div class="clearfix oe_login_buttons">
                        <button type="submit" class="btn btn-primary">
                            Log in
                        </button>
     
                    </div>

                </form>
            </t>
        </template>


</data>
</openerp>





