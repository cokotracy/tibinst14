<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="summary_booking_report_wizard" model="ir.ui.view">
        <field name="name">summary_report_wizard_view</field>
        <field name="model">sale.room.report.wizard</field>
        <field name="arch" type="xml">
        <form string="Summary report Options">
          <group col="4">
              <field name="date_from"/>
              <field name="date_to"/>
          </group>
            <footer>
                    <button name="button_export_html" string="View" type="object" default_focus="1" icon="fa-eye" class="btn btn-primary"/>
                    or
                    <button string="Cancel" class="oe_link" icon="fa-close" special="cancel" />
                </footer>
        </form>
        </field>
    </record>

    <act_window id="action_booking_room_summary_report_wizard"
                name="Summary report"
                res_model="sale.room.report.wizard"
                view_type="form"
                view_mode="form"
                view_id="summary_booking_report_wizard"
                target="new" />

</odoo>
